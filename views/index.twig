{% extends "layout.twig" %}

{% block main %}

<div class="row">

    <div class="col-lg-12">
        <table class="table">
            <tbody>
                <tr>
                    <th>Department</th>
                    <td>{{ profile.department }}</td>
                </tr>
                <tr>
                    <th>Function</th>
                    <td>{{ profile.funct}}</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Skills</th>
                </tr>
            </thead>
            <tbody>
                {%  for skill in profile.skills %}
                    <tr><td>{{ skill }}</td></tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div>
{% endblock %}

